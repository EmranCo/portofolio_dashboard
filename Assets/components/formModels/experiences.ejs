<!-- Delete experience Module -->

<div id="deleteExperience" onsubmit="$('#deleteExperience').modal('hide'); $('#doneExperience').modal('show');" class="modal fade deleteModal">
    <form action="/dashboard/experiences/delete" method="post">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">
                <div class="modal-header flex-column">
                    <div class="icon-box">
                        <i class="fas fa-trash-alt"></i>
                    </div>
                    <h4 class="modal-title w-100">Are you sure?</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Do you really want to delete this Experience ? This process cannot be undone.</p>
                </div>
                <input type="hidden" name="_id" value="" id="deleteExperienceID">
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </form>
</div>

