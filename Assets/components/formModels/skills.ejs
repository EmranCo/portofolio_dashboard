    </div>
</div>

<!-- Delete skill Module -->

<div id="deleteSkill" class="modal fade deleteModal" onsubmit="$('#deleteSkill').modal('hide'); $('#doneSkill').modal('show');">
    <form action="/dashboard/skills/delete" onsubmit="$('#deleteSkill').modal('hide'); $('#doneSkill').modal('show');" method="post">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">
                <div class="modal-header flex-column">
                    <div class="icon-box">
                        <i class="fas fa-trash-alt"></i>
                    </div>
                    <h4 class="modal-title w-100">Are you sure?</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Do you really want to delete this Skill ? This process cannot be undone.</p>
                </div>
                <input type="hidden" name="_id" value="" id="deleteSkillID">
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </form>
</div>

