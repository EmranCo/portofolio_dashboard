<!-- Add New Skill Module  -->
<div class="modal fade show" id="addSkill" onsubmit="$('#addSkill').modal('hide'); $('#doneSkill').modal('show');" tabindex="-1" aria-labelledby="exampleModalLabel" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg">
        <div class="modal-content p-3">
            <form method="post" action="/dashboard/skills/add" onsubmit="$('#addSkill').modal('hide'); $('#doneSkill').modal('show');" enctype="multipart/form-data">
                <div class="modal-header">
                    <h4 class="modal-title fw-bold text-center" id="exampleModalLabel">Add New Skill</h4>
                    <a href="#" data-dismiss="modal">
                        <i class="far fa-window-close text-danger" style="font-size: 2em;"></i>
                    </a>
                </div>
                <div class="modal-body">

                    <!-- Form Group (Skill Name)-->
                    <div class="mb-3">
                        <label class="small mb-1" for="title">Skill Name </label>
                        <input name="title" class="form-control" id="title" type="text" placeholder="Enter your skill name" required>
                    </div>

                    <!-- Form Group (Skill Precentage)-->
                    <div class="mb-5">
                        <label class="small mb-1" for="precentage">Skill Precentage </label>
                        <div style="position: relative;">

                            <input name="precentage" class="form-control" id="precentage" type="range" value="1" max="100" min="1" step="1" required>
                            <span class="small" style="position: absolute; left: 0; bottom: -25px;">
                                1%</span>
                            <span class="small" style="position: absolute; right: 0; bottom: -25px;">
                                100%</span>
                        </div>
                    </div>

                    <!-- Form Group (Skill State)-->
                    <div class="mb-3">
                        <label class="small mb-1" for="state">Skill State </label>
                        <select class="form-control" name="state" id="state" required>
                            <option value="1" selected>Visible</option>
                            <option value="0">Hidden</option>
                        </select>
                    </div>

                    <!-- Save changes button-->

                </div>
                <div class="modal-footer">
                    <input type="submit" value="Save" class="btn curr-bg curr-text">
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Skill Module  -->
<div class="modal fade show" id="editSkill" tabindex="-1" onsubmit="$('#editSkill').modal('hide'); $('#doneSkill').modal('show');" aria-labelledby="exampleModalLabel" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg">
        <div class="modal-content p-3">
            <form method="post" action="/dashboard/skills/edit" enctype="multipart/form-data">
                <div class="modal-header">
                    <h4 class="modal-title fw-bold text-center" id="exampleModalLabel">Edit Skill</h4>
                    <a href="#" data-dismiss="modal">
                        <i class="far fa-window-close text-danger" style="font-size: 2em;"></i>
                    </a>
                    <input type="hidden" id="editSkillID" name="_id" value="" id="editSkillID">
